<div class="row">

  <div class='span3'></div>

  <div class='span6 login-box'>
    <h2 class="login-heading">Forgot your password?</h2>

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| %>

          <%= devise_error_messages! %>

          <div class="control-group">
            <%= f.label :email, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :email, :autofocus => true, placeholder: 'Email' %>
            </div>
          </div>

          <!-- <div class="control-group"> -->
            <!-- <div class='controls'> -->
              <%= f.submit "Send me reset password instructions", class: 'btn btn-large btn-block' %>
            <!-- </div> -->
          <!-- </div> -->


      <% end %>

    <div class="footer-links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
  <div class='span3'></div>
</div>

