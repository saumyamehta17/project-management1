<%- model_class = Task -%>


<% if @tasks.empty? %>
       <h3>Plz create task</h3>
     <% else %> 
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:Task) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
       
        <td><h4><%= link_to task.name , workspace_project_task_path(@workspace,@project,task) %></h4></td>
        
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_workspace_project_task_path(@workspace,@project ,task), :class => 'btn btn-mini' %>
                    

          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workspace_project_task_path(@workspace, @project , task),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %><% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.create task")),
            new_workspace_project_task_path(@workspace , @project),
            :class => 'btn btn-primary' %>
            <%= link_to t('.back', :default => t("helpers.links.back")),
                      workspace_project_path(@workspace,@project), :class => 'btn btn-primary ' %>  
