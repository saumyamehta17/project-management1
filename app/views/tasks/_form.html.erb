
<%= form_for [@workspace, @project , @task] , :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :task, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :assigned_to_id, 'Assigned to', :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:task, :assigned_to_id, User.all, :id, :username, :prompt => true)%>
      
    </div>
  </div>
  <div class="control-group">
    <%= f.label :progress, :class => 'control-label' %>  
    <div class="controls">
    <select class="select">
    <option>Select</option>
    <% 10.times  do |n| %>
    <option><%= (n+1)*10 %></option>
    <% end %>
  </select>
</div></div></br>

<div class="control-group">
    <%= f.label :status, :class => 'control-label' %>  
    <div class="controls">
     <select class="select">
    <option>Select</option>
    
    <option>New</option>
    <option>Ready</option>
    <option>Done</option>
    <option>Hold</option>
    
  </select>
</div></div>
  

   <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                workspace_project_tasks_path(@workspace,@project), :class => 'btn' %>
  </div> 
<% end %>


