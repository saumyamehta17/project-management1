<%= simple_form_for [@workspace , @project], :html => { :class => 'form-horizontal' } do |f| %>
 
  <%= f.input :name %>
  <%= f.input :description , as: :text , :input_html => { :rows => 6 } %>  
    

  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "cancel",:back, :class => 'btn btn-primary' %>
  </div>
<% end %>
