<%- model_class = Project -%>


   

<% if @projects.empty? %>
       <h5>Plz create Project</h5>
     <% else %> 
<table class="table table-hover">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:Projects) %></th>
    
    </tr>
  </thead>
  <tbody>
     
    <% @projects.each do |project| %>
      <tr>
        
        <td><h4><%= link_to project.name , workspace_project_tasks_path(@workspace , project) %></h4></td>
        
        <td>
          
          <%#= link_to 'Tasks',project_tasks_path(project), :class => 'btn btn-mini' %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                       edit_workspace_project_path(@workspace , project), :class => 'btn btn-mini' %>
                       

          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workspace_project_path(@workspace , project),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %><% end %>
  </tbody>
</table>

<%= link_to 'Add Project',
             new_workspace_project_path(@workspace),
            :class => 'btn btn-primary' %>
 <%= link_to 'Back' ,workspaces_path,:class => 'btn btn-primary' %>
