<%= simple_form_for @workspace, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= f.input :description , as: :text , :input_html => { :rows => 6 } %>  
    
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <% if !@status.nil? %>
       <%= link_to "cancel", :back , :class => 'btn btn-primary' %>
    <% else %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                workspaces_path, :class => 'btn' %>
    <% end %>            
                   
  </div>
<% end %>
