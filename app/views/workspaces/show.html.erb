<%- model_class = Workspace -%>
<div class="page-header">
   <h3><strong><%= @workspace.name %></strong></h3>
</div>





<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Workspace) %>:</strong></dt>
  <dd><strong><%= @workspace.name %></strong></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @workspace.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workspaces_path, :class => 'btn btn-info'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_workspace_path(@workspace), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workspace_path(@workspace),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= link_to 'invite people' ,  workspace_membership_index_path(@workspace) , :class => 'btn btn-info'%>
  <%= link_to 'Projects' ,  workspace_projects_path(@workspace) , :class => 'btn btn-info'%>
</div>
