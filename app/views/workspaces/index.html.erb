<%- model_class = Workspace -%>

<div class="page-header">
  
</div>
<%# if @workspaces.empty? %>
       <!-- <h3>U have'nt created any Workspace yet.</h3> -->
<%# else %>


<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name(:Workspace) %></th>
      
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @workspaces.each do |workspace| %>
      <tr>
        
        <td><strong><h3><%= link_to workspace.name , workspace_path(workspace) %></h3></strong></td>
        
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_workspace_path(workspace), :class => 'btn btn-small' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      workspace_path(workspace),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <%# end %>
  </tbody>
</table>
<% end %>
<%= link_to 'New Workspace',
            new_workspace_path,
            :class => 'btn btn-primary' %>

