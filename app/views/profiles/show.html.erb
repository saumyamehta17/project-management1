<%- model_class = Profile -%>


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @profile.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @profile.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phoneno) %>:</strong></dt>
  <dd><%= @profile.phoneno %></dd></br>
  <dt><strong>Photo:</strong></dt>
  <dd><%= image_tag(@profile.photo.url(:thumb)) %></dd>
  
 
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workspaces_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path, :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
