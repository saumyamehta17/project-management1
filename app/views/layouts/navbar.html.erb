<div class="container">
  <% flash.each do |name,msg| %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>" >
      <a class="close" data-dismiss="alert">x</a>
      <%= msg %>
    </div>
  <% end %>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">

      <div class="container">
        <!-- <a class="brand" href="./index.html">Project tracking</a> -->
        <%= link_to root_path, class: 'brand'  do %>
          <div  class="icon icon-home">Project Management</div>
        <% end %>

        <ul class="nav pull-right">
          <% if user_signed_in? %>
           <form class="navbar-search" style="margin-right:7px;">
             <input type="text" class="search-query" placeholder="Search here" /> 
           </form> 
            <li><%= image_tag avatar_url(current_user) %></li>
            <li><%= link_to "Hi #{current_user.username}" , profile_path %></li>
            <li><%= link_to "Logout" , destroy_user_session_path , method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign up" , new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
