<div class="container">

  
  <% flash.each do |name,msg| %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'error' %>" >
      <a class="close" data-dismiss="alert">x</a>
      <%= msg %>
    </div>
  <% end %>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">

      <div class="container">
        <!-- <a class="brand" href="./index.html">Project tracking</a> -->
        <%= link_to root_path, class: 'brand'  do %>
          <div  class="icon icon-home">Project Management</div>
        <% end %>

        <ul class="nav pull-right" class="form-inline">
          <% if user_signed_in? %>
             <div class="navbar-search" style="margin-right:30px;" >
              <ul >
                <li class="dropdown" >
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" ><i class="icon-search"></i><b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <%= form_tag new_search_path , method: :get do %>
                      <div class="input-prepend">
                        <div class="btn-group">
                          <select name="option_value" class="btn dropdown-toggle" style="width: 140px;">
                            <option >Workspace</option>
                            <option >Project</option>
                            <option >Task</option>
                          </select>
                        </div>
                      <input type="text" placeholder="Keywords" name="keyword">
                      </div>
                    <% end %>
                  </ul>
                </li>
              </ul>
             </div> 

            <li><%= image_tag avatar_url(current_user) %></li>
            <li><%= link_to "Hi #{current_user.username}" , profile_path %></li>
            <li><%= link_to "Logout" , destroy_user_session_path , method: :delete %></li>
          <% else %>

            <li><%= link_to "Sign up" , new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
               
                        
               
