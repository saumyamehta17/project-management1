<div class="span4">
	<%= render :template => "reminders/index" %>
</div>

<div class="span3"> </div>

<div class="container" class="pull-right">
<div class="span6"  style="margin-left:20%; margin-top:-20%;">

<div class="page-header" class="pull-right">
  <h4>New/Editing Reminder</h4>
</div>

<%= simple_form_for @reminder, :html => { :class => 'form-horizontal' , :multipart => true} do |f| %>


  <%= f.input :name %>
  <%= f.input :due_date , as: :string %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reminders_path, :class => 'btn' %>
  </div>
<% end %>
</div></div>
